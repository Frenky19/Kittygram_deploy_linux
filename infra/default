server {
        server_name taskihuyaski.zapto.org;
        
        location /api {
                proxy_pass http://127.0.0.1:8000;
                proxy_set_header Host $host;
        }

        location /admin {
                proxy_pass http://127.0.0.1:8000;
                proxy_set_header Host $host;
        }
        

        location / {
                root /var/www/taski;
                index index.html index.htm;
                try_files $uri /index.html;
        }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/taskihuyaski.zapto.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/taskihuyaski.zapto.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = taskihuyaski.zapto.org) {
        return 301 https://$host$request_uri;
    }
     listen 80;
        server_name taskihuyaski.zapto.org;
    return 404;
}

server {
        listen 80;
        server_name 158.160.76.170;
        root /var/www/kittygram/;

        location /static_backend/ {
                alias /var/www/kittygram/static_backend/;
        }

        location /media/ {
                alias /var/www/kittygram/media/;
        }

        location /api/ {
                proxy_pass http://127.0.0.1:8080;
                proxy_set_header Host $host;
                client_max_body_size 20M;
        }

        location /admin/ {
                proxy_pass http://127.0.0.1:8080;
                proxy_set_header Host $host;
                client_max_body_size 20M;
        }
        
        location / {
                root /var/www/kittygram;
                index index.html index.htm;
                try_files $uri /index.html;
        }
}
